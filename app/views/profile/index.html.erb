<h1>Profile</h1>
<table class="table table-hover table-dark">
    <thead>
        <tr>
        <th>User ID</th>
        <th>Content</th>
        <th colspan="3">Actions</th>

        </tr>
    </thead>
    <tbody>
        <% @microposts.each do|micropost| %>
            <tr>
            <td><%=micropost.user_id %></td>
            <td><%=micropost.content %></td>
            <td><%= link_to 'View', micropost, {:class => 'btn btn-light'} %></td>
            <td><%= link_to 'Edit', edit_micropost_path(micropost), {:class => 'btn btn-light'} %></td>
            <td><%= link_to "Delete", micropost, :class => 'btn btn-light', data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
    </tbody>
</table>