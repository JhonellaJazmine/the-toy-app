<%= form_with(model: user, data: { turbo: false }) do |form| %>
    <% if @user.errors.any? %>
       <h2><%= pluralize(@user.errors.size, 'error') %> prevented this user from being saved:</h2>
       <ul>
       <% @user.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
       <% end %>
       </ul>
<% end %>

<div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
</div>
<div>
    <%= form.label :email %><br>
    <%= form.email_field :email %>
</div>

<div>
<%= form.submit({:class => 'btn btn-dark'})%>
</div>
<% end %>