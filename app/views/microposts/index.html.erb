<div class="m-3">
<p><%= notice %></p>
<div class="m-3"><h1>Microposts</h1>
<%= link_to 'New Micropost',new_micropost_path, {:class => 'btn btn-dark m-3'}%>
<%= link_to 'Back to Users',users_path, {:class => 'btn btn-dark'} %>


<% @microposts.each do|micropost| %>
    <div class = "container">
    <div class = "row">
    <div class = "col-4">
    <div class="card">
  <div class="card-header">
        User ID
        <%=micropost.user_id %></br>
    </div>
    <div class="card-body">
    <h5 class="card-title">Title</h5>

    Image
    </br>
    <% if micropost.image.attached?%>
    <%=image_tag(micropost.image, style:"height: 100px;") %></br><% end %>
    </br>
            Content
            <p class="card-text"><%=micropost.content %></p></br>
        
          
            Actions
            </br>
            <%= link_to 'View', micropost, {:class => 'btn btn-light'} %>
            <%= link_to 'Edit', edit_micropost_path(micropost), {:class => 'btn btn-light'} %>
            <%= link_to "Delete", micropost, :class => 'btn btn-light', data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
            </br>
        </br>
        </div>
    </div>
    </div>

    </div>
    </div>

    <% end %>
