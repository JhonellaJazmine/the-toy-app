<div class="m-3">
<p><%= notice %></p>
<div class="m-3"><h1>Microposts</h1>
<%= link_to 'New Micropost',new_micropost_path, {:class => 'btn btn-dark m-3'}%>
<%= link_to 'Back to Users',users_path, {:class => 'btn btn-dark'} %>
<table class="table table-hover table-dark">
    <thead>
        <tr>
        <th>User ID</th>
        <th>Content</th>
        <th colspan="3">Actions</th>

        </tr>
    </thead>
    <tbody>
        <% @microposts.each do|micropost| %>
            <tr>
            <td><%=micropost.user_id %></td>
            <td><%=micropost.content %></td>
            <td><%= link_to 'View', micropost, {:class => 'btn btn-light'} %></td>
            <td><%= link_to 'Edit', edit_micropost_path(micropost), {:class => 'btn btn-light'} %></td>
            <td><%= link_to "Delete", micropost, :class => 'btn btn-light', data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
    </tbody>
</table>
</div>
</div>