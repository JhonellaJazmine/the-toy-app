<div class="row row-cols-1 row-cols-md-3 g-4">
<% @microposts.each do|micropost| %>
  <div class="col">
    <div class="card h-100">
    <% if micropost.image.attached?%>
    <%=image_tag(micropost.image)%>
    <% end %>
      <div class="card-body">
        <h5 class="card-title"><%=micropost.title%></h5>
        <p class="card-text">
        <%=micropost.content %>
        </p>
        <h7 class="card-title"><%=micropost.created_at.strftime("%B %d %Y, %l:%M%P")%></h7>
      </div>
