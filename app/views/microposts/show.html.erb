<% provide(:title, @micropost.title) %>
</br>

<%= link_to 'Back', microposts_path, {:class => 'btn btn-outline-primary'}%>
<% if @micropost.user == Current.user %>
<%= link_to 'Edit', edit_micropost_path(@micropost), {:class => 'btn btn-outline-primary'} %>
<% end %>
</br>
</br>

<div class="container text-center">
  <div class="row">
    <h1>TOY DETAILS</h1>
    <div class="col">
      <%=link_to image_tag(@micropost.image_as_thumbnail),@micropost.image %>
    </div>
    <div class="col">
      </br></br>
      <p><strong>TOY: </strong><%=@micropost.title %></p>
      <p><strong>ABOUT: </strong><%=@micropost.content %></p>
      <p><strong>POSTED BY: </strong></p>
      <%=image_tag avatar_url(@micropost.user), class: "rounded-circle", size:'48x48'%>
      <%= link_to @micropost.user.name, profile_path(@micropost.user.id), {:class => 'btn btn-light'} %></br> 
    </div>
  <div class="col">
    <% if @micropost.additional_images.attached?%>
      <h3></br>ADDITIONAL PICTURES</h3>
    
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">

      <div class="carousel-inner">
        <%@micropost.additional_images.each_with_index do |pic,i|%>
        <div class="carousel-item <%= "active " if i==0 %>">
          <%= image_tag (@micropost.additional_image_as_thumbnail(pic)) %>
        </div>
        <%end%>
      </div>

      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" style="background-color: rgb(10, 33, 95)" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
      <span class="carousel-control-next-icon" style="background-color: rgb(10, 33, 95)" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
      </button>
    <% end %>
    </div>
  </div>
</div>
